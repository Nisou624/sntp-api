{
  "name": "sntp-api",
  "version": "1.0.0",
  "description": "Backend API pour le site web SNTP",
  "main": "server.js",
  "scripts": {
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --verbose",
    "test:coverage": "NODE_ENV=test jest --coverage --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "generate-hash": "node helper/generateAdminPassword.js",
    "db:create": "node scripts/createDatabase.js",
    "db:test": "node scripts/testConnection.js",
    "db:sync": "node scripts/syncDatabase.js",
    "db:import": "node migration/importFromJSON.js",
    "db:reset": "node scripts/resetDatabase.js",
    "check:statut": "node scripts/check-statut-values.js",
    "migrate:statut": "node migration/fix-statut-enum.js",
    "migrate": "node scripts/migrate.js",
    "db:migrate:pdf": "node scripts/migratePDFtoDatabase.js",
    "init-db": "node scripts/initDatabase.js"
  },
  "keywords": [
    "api",
    "sntp"
  ],
  "author": "Nisou624",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.11",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "supertest": "^7.1.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
